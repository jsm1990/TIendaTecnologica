@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechnoDevice</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

</head>
<body>
    @{
        if (Context.Session.GetObjectFromJson<List<Item>>("listaDeCompras") == null)
        {
            ViewData["cantidad"] = 0;
        }
        else
        {
            ViewData["cantidad"] = Context.Session.GetObjectFromJson<List<Item>>("listaDeCompras").Count(); ;
        }

    }

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a  asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
            <img src="~/images/logo2.png" alt="Tchno Device Logo" class="light">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Inicio <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a a asp-area="" asp-controller="Productos" asp-action="Index" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Productos
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a a asp-area="" asp-controller="Productos" asp-action="PorCategoria" asp-route-idCategoria="0003" class="dropdown-item">Accesorios</a>
                        <a a asp-area="" asp-controller="Productos" asp-action="PorCategoria" asp-route-idCategoria="0002" class="dropdown-item">Celulares</a>
                        <a a asp-area="" asp-controller="Productos" asp-action="PorCategoria" asp-route-idCategoria="0001" class="dropdown-item">Computadoras</a>
                        <a a asp-area="" asp-controller="Productos" asp-action="PorCategoria" asp-route-idCategoria="0005" class="dropdown-item">Videojuegos</a>
                        <div class="dropdown-divider"></div>
                        <a a asp-area="" asp-controller="Productos" asp-action="PorCategoria" asp-route-idCategoria="0004" class="dropdown-item">Componentes y Periféricos</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">Acerca de Nosotros</a>
                </li>
                <li class="nav-item">
                    <a a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link">Contacto</a>
                </li>

            </ul>
            <form class="form-inline my-2 my-lg-0">
                <a id="MiCuenta" class="nav-link gold" href="#">Mi Cuenta <i class="fas fa-user"></i></a>
                <a id="carrito" href="javascript:IrAlCarrito(@ViewData["cantidad"])" class="nav-link gold"><i class="fas fa-shopping-cart"> (@ViewData["cantidad"])</i></a>

            </form>
        </div>
    </nav>

    <div class="alert alert-danger alert-dismissible alertCarrito" id="alertCarrito">
        El carrito de compras está vacio.
    </div>

    <div class="container body-content">

        @RenderBody()
        <hr />

        <footer class="page-footer font-small blue">
            <div class="footer-copyright text-center py-3">
                <a asp-controller="Home" asp-action="About" > TechnoDevice </a>
                © 2019 Copyright Todos los Derechos Reservados
            </div>
        </footer>
    </div>

    <!-- Footer -->
    <!-- Footer -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
